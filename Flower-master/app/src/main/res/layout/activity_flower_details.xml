<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowerDetails"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_flower_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scaleType="center"
        />


    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_flower_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flower Name"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_flower_price_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flower price"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/tv_flower_category_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flower category"
            android:gravity="center"
            android:textSize="20dp"

            />

        />
        <TextView
            android:id="@+id/tv_flower_instruction_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flower instruction"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            />

    </LinearLayout>



</LinearLayout>